{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Backend (uvicorn)",
			"type": "shell",
			"command": "python",
			"args": [
				"-m",
				"uvicorn",
				"backend:app",
				"--host",
				"127.0.0.1",
				"--port",
				"8000",
				"--reload",
				"--app-dir",
				"backend"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Install Frontend Deps",
			"type": "shell",
			"command": "npm",
			"args": [
				"--prefix",
				"frontend",
				"install"
			],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Run Frontend (Vite)",
			"type": "shell",
			"command": "npm",
			"args": [
				"--prefix",
				"frontend",
				"run",
				"dev"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Run Frontend (Vite)",
			"type": "shell",
			"command": "npm",
			"args": [
				"--prefix",
				"frontend",
				"run",
				"dev"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		}
	]
}